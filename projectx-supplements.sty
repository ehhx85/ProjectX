% ============================================================================ %
\newcommand{\@SupplementFolder}{supplements}%
% ============================================================================ %
\newcommand{\@SupplementDirectory}{\@DefaultFolder}%
% ============================================================================ %
\newcommand{\GetSupplementDirectory}{\@SupplementDirectory}%
% ============================================================================ %
\newcommand{\@ResetSupplementDirectory}{%
    \renewcommand{\@SupplementDirectory}{\@DefaultFolder}%
}%
% ============================================================================ %
\newcommand{\Xsupplementfile}[1]{%
    \@ResetSupplementDirectory%
    \@LoadGraphicFile{\@SupplementDirectory}{\@SupplementFolder}{#1}%
}%
% ============================================================================ %
\newcommand{\@SupplementLabel}{File S}%
% ============================================================================ %
\NewDocumentCommand{\Xrefsupplement}{ s m }{%
    \IfBooleanT{#1}{\Xsupplementfile{#2}}%
    \@SupplementLabel\ref{sup:#2}%
}%
% ============================================================================ %
\newcommand{\Xrefsupplements}[2]{%
    \@SupplementLabel s\ \ref{sup:#1} and \ref{sup:#2}%
}%
% ============================================================================ %
\newcommand{\supplementcaption}[3]{%
    \caption[``#1"\ :\ #2]{``#1"\ :\ #3.\ (\textit{available online})}%    
}%
% ============================================================================ %
\newcommand{\XSupplementTestPage}[1]{%
    \glsresetall%
    \PageXDrafting%
    \Xsupplementfile{#1}\\%
    filename: "#1"%
    \newpage%
    \glsresetall%
}%
