\newcommand{\@TableFolder}{tables}%
% ============================================================================ %
\newcommand{\@TableDirectory}{\@DefaultFolder}%
% ============================================================================ %
\newcommand{\GetTableDirectory}{\@TableDirectory}%
% ============================================================================ %
\newcommand{\@ResetTableDirectory}{%
    \renewcommand{\@TableDirectory}{\@DefaultFolder}%
}%
% ============================================================================ %
\newcommand{\Xtablefile}[1]{%
    \@ResetTableDirectory%
    \@LoadGraphicFile{\@TableDirectory}{\@TableFolder}{#1}%
}%
% ============================================================================ %
\newcommand{\@TableLabel}{Table}%
% ============================================================================ %
\NewDocumentCommand{\Xreftable}{ s m }{%
    \IfBooleanT{#1}{\Xtablefile{#2}}%
    \@TableLabel\ \ref{tbl:#2}%
}%
% ============================================================================ %
\newcommand{\XTableTestPage}[1]{%
    \glsresetall%
    \PageXDrafting%
    \Xtablefile{#1}\\%
    filename: "#1"%
    \newpage%
    \glsresetall%
}%
