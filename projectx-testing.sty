\newcommand{\@TestingGlossaries}{%
    \begin{center}%
        Something about \gls{latex}\\%
        Glossary directory path is: [\GetGlossaryDirectory]%
    \end{center}%
}%
% ============================================================================ %
\newcommand{\@TestingReferences}{%
