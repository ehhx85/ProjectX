\newcommand{\SectionTest}{%
    \hrule%
    \vspace{1em}%
    \noindent Begin section test...%
    \@TestingGeneral%
    \@TestingGlossaries%
    \@TestingReferences%
    \@TestingGraphics%
    \noindent ... end section test.%
}%
% ============================================================================ %
\newcommand{\@TestingGeneral}{%
    \begin{center}%
        Compiler directory level is: [\GetCompilerDirectoryLevel]\\%
        Current directory level is: [\GetCurrentDirectoryLevel]\\%
        Main directory path is: [\GetMainDirectory]\\%
        Section directory path is: [\GetSectionFileDirectory]%
    \end{center}%    
    \lipsum[1]%
}%
% ============================================================================ %
\newcommand{\@TestingGraphics}{%
    \Xfigurefile{default.tex}%
    \begin{center}%
        Table directory path is: [\GetTableDirectory]\\%
        Figure directory path is: [\GetFigureDirectory]%    
    \end{center}%
}%
