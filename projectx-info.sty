% ============================================================================ %
\newcommand{\@InfoFolder}{info}%
% ============================================================================ %
\newcommand{\@InfoDirectory}{\@DefaultFolder}%
% ============================================================================ %
\newcommand{\GetInfoDirectory}{\@InfoDirectory}%
% ============================================================================ %
\newcommand{\@ResetInfoDirectory}{%
    \renewcommand{\@InfoDirectory}{\@DefaultFolder}%
}%
% ============================================================================ %
\newcommand{\LoadInfoFile}[1]{%
    \@ResetInfoDirectory%
    \@AppendToPath{\@InfoDirectory}{\@InfoFolder}%
    \@AppendToPath{\@InfoDirectory}[/]{#1}%
    \IfFileExists{\@InfoDirectory}%
    {\input{\@InfoDirectory}}%
    {%
        \@PrependToPath{..}[/]{\@InfoDirectory}%        
        \IfFileExists{\@InfoDirectory}%
        {\input{\@InfoDirectory}}%
        {%
            \@PrependToPath{..}[/]{\@InfoDirectory}%        
            \IfFileExists{\@InfoDirectory}%
            {\input{\@InfoDirectory}}%
            {%
                \@PrependToPath{..}[/]{\@InfoDirectory}%        
                \IfFileExists{\@InfoDirectory}%
                {\input{\@InfoDirectory}}%
                {%
                    \@PrependToPath{..}[/]{\@InfoDirectory}%        
                    \IfFileExists{\@InfoDirectory}%
                    {\input{\@InfoDirectory}}%
                    {%
                        \@PrependToPath{..}[/]{\@InfoDirectory}%        
                        \IfFileExists{\@InfoDirectory}%
                        {\input{\@InfoDirectory}}%
                        {}% stop searching at lowest level
                    }%
                }%              
            }%
        }%
    }%
}%
