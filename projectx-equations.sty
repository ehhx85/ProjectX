\newcommand{\@EquationFolder}{equations}%
% ============================================================================ %
\newcommand{\@EquationDirectory}{\@DefaultFolder}%
% ============================================================================ %
\newcommand{\GetEquationDirectory}{\@EquationDirectory}%
% ============================================================================ %
\newcommand{\@ResetEquationDirectory}{%
    \renewcommand{\@EquationDirectory}{\@DefaultFolder}%
}%
% ============================================================================ %
\newcommand{\Xequationfile}[1]{%
    \@ResetEquationDirectory%
    \@LoadGraphicFile{\@EquationDirectory}{\@EquationFolder}{#1}%
}%
% ============================================================================ %
\newcommand{\@EquationLabel}{eq.}%
% ============================================================================ %
\newcommand{\Xrefequation}[1]{%
    \@EquationLabel\ (\ref{eq:#1})%
}%
% ============================================================================ %
\newcommand{\Xrefequations}[2]{%
    \@EquationLabel\ \ref{eq:#1} and \ref{eq:#2}%
}%
% ============================================================================ %
\newcommand{\Xrefequationrange}[2]{%
    \@EquationLabel\ \ref{eq:#1}\ {\--}\ \ref{eq:#2}%
}%
% ============================================================================ %
\NewDocumentCommand{\Xmath}{ m }{%
    $#1$%
}%
% ============================================================================ %
\NewDocumentCommand{\Xvariable}{ O{,} m O{,} }{%
    % Usage example: text text text \Xvariable[#1]{#2}[#3] text text text
    \unskip% remove space between last text and command
    #1\ % insert separator and new space
    $#2$% formatted variable in math mode
    #3% insert separator before trailing text
}%
