\newenvironment{Xnuclearreaction}{%
    \par%
    \noindent% 
    \begin{minipage}[t]{\linewidth}%
        \begin{equation*}%
            \begin{array}{ D E F }%
                &&\@QValueString%
            \end{array}%
        \end{equation*}%
        \vspace*{-6.0ex}%    
}%
%% >>> environment text <<<
{%
    \end{minipage}%
    \vspace{3.0ex}%
    \par%
    \noindent%
}%
